{
  "compilerOptions": {
    "target": "es6",                // Modern JS (you can use "es5" for older support)
    "module": "es6",
    "outDir": "./compiled",         // Output directory
    "strict": true,                 // Good practice
    "removeComments": false,        // Optional: strip comments from output
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Optional: disable .map files
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./compiled",
    "node_modules"
  ]
}
